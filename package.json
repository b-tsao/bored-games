    "build": "./build.sh",
    "//4": "MISC",
    "lint": "tslint --project tsconfig.json",
    "//5": "PACKAGE",
    "prepack": "[ -d 'build' ] || npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
