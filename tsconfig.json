{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2020",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "src",
    "outDir": "build",
    "removeComments": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "server",
    "src/games/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/test"
  ]
}
