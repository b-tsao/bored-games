{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [
                100
            ]
        },
        "member-ordering": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-bitwise": false,
        "quotemark": [
            true,
            "single"
        ],
        "variable-name": [
            true,
            "allow-leading-underscore"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "indent": [
            true,
            "spaces",
            2
        ]
    },
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    }
}